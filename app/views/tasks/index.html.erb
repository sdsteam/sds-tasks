<% if @tasks.empty? -%>    
 <p>There are no tasks</p>  
<% else -%>    
 <% @tasks.each do |task| -%>  
   <% @task = task %>
   <p>  
     <%= in_place_editor_field :task, :name, {}, :url => { :action => "set_task_name", :id => task.Id }, :id => task.Id %> <%= link_to("delete", { :action => "destroy", :id => task.Id },
       :confirm => "Are you sure you want to delete this task?",
       :method => :delete) %>
    
   </p>    
 <% end -%>  
<% end -%>
<div id="newtaskform">
<% form_tag tasks_path do -%>    
 <fieldset>    
  <legend>Enter a new task</legend>    

  <%= text_field 'task', 'name' %>  
     
   <button type="submit">Save</button>      
 </fieldset>  
 </div>
<% end -%>